<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <h4>Title</h4>
         <%= f.text_field :title %>
    </div>
    <div class="field">
        <h4>Body</h4>
          <%= f.text_area :body %>
    </div>
    <div class="action">
        <%= f.submit 'Update Book' %>
    </div>
<% end %>


